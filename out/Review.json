{
	"id": "http://json-schema.org/schemas/Review.json",
	"title": "Review",
	"format": "http://schema.org/Review",
	"allOf": [{"$ref": "CreativeWork.json"}],
	"type": "object",
	"properties": {
		"itemReviewed": {"$ref": "Thing.json#/definitions/possibleRef"},
		"reviewBody": {"$ref": "#/definitions/reviewBody"},
		"reviewRating": {"$ref": "Rating.json#/definitions/possibleRef"}
	},
	"definitions": {
		"array": {
			"type": "array",
			"items": {"$ref": "#"}
		},
		"possibleRef": {
			"oneOf": [
				{"$ref": "#"},
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				}
			]
		},
		"possibleRefArray": {
			"type": "array",
			"items": {"$ref": "#/definitions/possibleRefArray"}
		},
		"reviewBody": {
			"title": "Review Body",
			"description": "The actual body of the review",
			"type": "string"
		}
	}
}